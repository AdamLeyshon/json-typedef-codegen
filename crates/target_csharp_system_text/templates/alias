namespace {{ namespace }}
{
{{ metadata|description(1) }}
    [JsonConverter(typeof({{ name }}JsonConverter))]
    public class {{ name }}
    {
        /// <summary>
        /// The underlying data being wrapped.
        /// </summary>
        public {{ type_ }} Value { get; set; }
    }

    public class {{ name }}JsonConverter : JsonConverter<{{ name }}>
    {
        public override {{ name }} Read(ref Utf8JsonReader reader, Type typeToConvert, JsonSerializerOptions options)
        {
            return new {{ name }} { Value = JsonSerializer.Deserialize<{{ type_ }}>(ref reader, options) };
        }

        public override void Write(Utf8JsonWriter writer, {{ name }} value, JsonSerializerOptions options)
        {
            JsonSerializer.Serialize<{{ type_ }}>(writer, value.Value, options);
        }
    }
}
